{
 "vim_mode": true,
 "format_on_save": "on",
  "formatter": {
    "external": {
      "command": "/etc/profiles/per-user/j/bin/prettier",
      "arguments": [
        "--stdin-filepath",
        "{buffer_path}"
      ]
    }
  },
  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false,
          "formatting": false
        },
      },
    },
  },
  "languages": {
    "Ruby": {
      "format_on_save": "off",
      "language_servers": [
        "ruby-lsp",
        "!solargraph",
        "!rubocop",
      ]
    },
  }
}